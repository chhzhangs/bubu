@import "compass";

//标头部分 start-------------------------------------------------------------
header{
	background-color: #DC3237;
	.top-ele{
		background-repeat: no-repeat;
		background-size: 30px;
		background-position: 5px 5px;
	}

	.back{
		padding: 34px;
		background-image: image-url('t_back_w.png');
	}

	#login{ 
		padding: 12px;
		p{
			margin: 0;
			font-size: 16px;
			line-height: 1;
			color: #f1f1f1;
			text-align: center;
		}
		img{
			display: block;
			margin: auto;
			width: 80px;
		}
		//background-image: image-url('navbar_netease@2x.png');
	}

	.logout{
		padding: 8px 10px;
		visibility: hidden;
		&.active{
			visibility: visible;
		}
		p{
			margin: 0;
			padding: 4px 0; 
			width: 46px;
			font-size: 12px;
			line-height: 1;
			text-align: center;
			color: #f1f1f1;
			border-style: solid;
			border-width: 1px;
			border-color: #f1f1f1;
			@include border-radius(8px); 
		}
	}
}
//标头部分 end-----------------------------------------------------------------

//标头下的导航部分 start-------------------------------------------------------
.user-nav{
	background-color: #DC3237;
	ul li{
		margin-bottom: 5px;
		padding-top: 5px;
		padding-bottom: 5px;
		color: #f1f1f1;
		text-align: center;
		font-size: 14px;
		@include transition(all .2s);
		&.nav-border{
			border-style: none solid;
			border-color: #f1f1f1;
			border-width: 2px;
		}
		&.active{
			@include scale(1.2);
			@include transition(all .2s);
			color: #fff;
		}
	}
}
//标头下的导航部分 end---------------------------------------------------------